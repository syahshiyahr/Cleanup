<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="30dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_upcoming"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/image_beach"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tv_beach_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panda Beach"
            android:fontFamily="@font/roboto_medium"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/img_upcoming"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/text_black"
            android:layout_marginTop="15dp"
            android:layout_marginStart="13dp"/>


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31th Jan 2021 - 08:30 AM"
            android:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_beach_name"
            app:layout_constraintStart_toEndOf="@id/img_upcoming"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/text_black"/>

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Km"
            android:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:layout_marginTop="9dp"
            android:layout_marginStart="13dp"
            app:layout_constraintStart_toEndOf="@id/img_upcoming"
            app:layout_constraintTop_toBottomOf="@id/tv_date"/>


        <com.google.android.material.button.MaterialButton
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btn_subscribe"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Subscribe"
            android:textColor="@color/blue_secondary"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:cornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/blue_secondary"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>